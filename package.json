{
  "name": "rest-api-boilerplate",
  "version": "0.0.0",
  "description": "starter boilerplate nodejs apis",
  "main": "index.js",
  "keywords": [
    "nodejs",
    "docker",
    "REST"
  ],
  "dependencies": {
    "body-parser": "^1.13.3",
    "colors": "^1.3.0",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "mongodb": "^3.0.10",
    "morgan": "^1.8.0",
    "ajv": "6.5.1",
    "express-session": "1.15.6",
    "connect-mongo": "2.0.1"
  },
  "author": "Osama Salama",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.9.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^3.5.0",
    "chai-http": "^2.0.1",
    "cross-env": "^5.1.6",
    "djv": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "lodash": "^4.17.10",
    "mocha": "^2.4.5",
    "nodemon": "^1.17.5"
  },
  "scripts": {
    "start": "cross-env BABEL_DISABLE_CACHE=1 NODE_ENV=dev nodemon ./server.js",
    "test-report": "nyc --reporter=lcov --reporter=text-lcov",
    "test": "NODE_ENV=test mocha ./api/src/test/*.test.js ./services/test/controllers/*.test.js",
    "dock-build": "build -t rest-api-boilerplate .",
    "dock-run": "docker run -p 4000:8686 rest-api-boilerplate",
    "complexity-report": "jscomplexity -p '{api/src/*.js, services/src/controllers/*.js,!config/**}'",
    "count-lines": ""
  }
}
